<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Default</servlet-name>
        <servlet-class>com.mymaven.servlet.impl.DefaultServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Default</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Default</servlet-name>
        <url-pattern>/com.mymaven</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.mymaven.servlet.impl.RegistrationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>com.mymaven.servlet.impl.ProfileServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Top</servlet-name>
        <servlet-class>com.mymaven.servlet.impl.AllUsersServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Top</servlet-name>
        <url-pattern>/top</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mymaven.servlet.impl.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>forgot_pass</servlet-name>
        <servlet-class>com.mymaven.servlet.impl.ForgotPassServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>forgot_pass</servlet-name>
        <url-pattern>/forgot_pass</url-pattern>
    </servlet-mapping>
    
</web-app>